@using MVCapp.DBModels
@model MVCapp.ViewModels.CreateUpdateTaskViewModel

<div class="row">
    <div class="col-12">
        <div class="breadcrumbs-container">
            <div class="breadcrumbs">
                <a class="logo" href="/">TODO Application</a>
                <i class="fa-solid fa-caret-right"></i>
                <a>Edit task</a>
            </div>
            <a class="button button-primary" href="/">Home page</a>
        </div>
        <div class="form-container">
            <form method="post" asp-action="Edit">
                <div class="form-group form-title">
                    <h2>Edit task</h2>
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <div class="form-group-item col-12 col-md-6">
                        <label asp-for="Task.Deadline">Deadline: </label>
                        <input asp-for="Task.Deadline" value="@Model.Task.Deadline.ToString("yyyy-MM-dd HH:mm:ss").Replace(' ', 'T')"/>
                    </div>
                    <div class="form-group-item col-12 col-md-6">
                        <label>Category: </label>
                        <select asp-for="Task.CategoryId" asp-items="@(new SelectList(
                                                                       Model.Categories, 
                                                                       nameof(Category.Id), 
                                                                       nameof(Category.Name), 
                                                                       Model.Categories.Where(c => c.Id == Model.Task.CategoryId).First()
                                                                       ))">
                        </select>
                    </div>
                    <div class="form-group-item col-12">
                        <label asp-for="Task.Content">Content: </label>
                        <textarea asp-for="Task.Content">@Model.Task.Content</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-item col-12">
                        <input type="submit" class="button button-success" value="Save task"/>
                        <a class="button button-danger">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
